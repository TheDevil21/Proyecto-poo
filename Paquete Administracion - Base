package Administracion;
import java.util.ArrayList;


public abstract class Base{
  protected String nom_usuario;
  protected String contra;
  protected String id;
  protected String nivel;


  public Base(String nom_usuario,String contra,String id,String nivel){
    this.nom_usuario = nom_usuario;
    this.contra = contra;
    this.id = id;
    this.nivel = nivel;
  }

  public Base(String nom_usuario,String contra){
    this.nom_usuario = nom_usuario;
    this.contra = contra;
  }
  

//Getters

  public String getNombre(){
    return nom_usuario;
  }
  public String getContra(){
    return contra;
  }
  public String getId(){
    return id;
  }
  public String getNivel(){
    return nivel;
  }  
}
  
